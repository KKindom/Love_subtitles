         <JFXComboBox fx:id="sub_first1" layoutX="271.0" layoutY="187.0" prefHeight="23.0" prefWidth="95.0" />
         <JFXComboBox fx:id="sub_first2" layoutX="391.0" layoutY="187.0" prefHeight="23.0" prefWidth="95.0" />
